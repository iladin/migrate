AUTOTEST_PATH="${abs_top_builddir}/cobc"
PATH="$AUTOTEST_PATH:$PATH"

CC="@CC@"

FLAGS="-std=cobol2002 -debug -Wall"
COMPILE="cobc ${FLAGS} ${COBOL_FLAGS}"
COMPILE_ONLY="cobc -fsyntax-only ${FLAGS} ${COBOL_FLAGS}"
COMPILE_MODULE="cobc -m ${FLAGS} ${COBOL_FLAGS}"

export COB_CFLAGS="-I${abs_top_srcdir}"
export COB_LIBS="-L${abs_top_builddir}/libcob/.libs -lcob @LIBCOB_LIBS@"
export LD_LIBRARY_PATH="${abs_top_builddir}/libcob/.libs"
